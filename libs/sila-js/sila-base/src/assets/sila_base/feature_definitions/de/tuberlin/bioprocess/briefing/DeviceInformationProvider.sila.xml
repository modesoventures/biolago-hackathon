<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLA2Version="1.0" FeatureVersion="1.0" MaturityLevel="Draft" Originator="de.tuberlin.bioprocess" Category="briefing"
        xmlns="http://www.sila-standard.org"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>DeviceInformationProvider</Identifier>
    <DisplayName>Device Information Provider</DisplayName>
    <Description>Provides meta data about the hardware device of the used SiLA Server</Description>
    <Property>
        <Identifier>DeviceSuperior</Identifier>
        <DisplayName>Device Superior</DisplayName>
        <Description>Contact of the person how take care for the device</Description>
        <Observable>No</Observable>
        <DataType>
          <Basic>String</Basic>
        </DataType>
    </Property>
    <Property>
        <Identifier>RoomNumber</Identifier>
        <DisplayName>Room Number</DisplayName>
        <Description>Room Number where the device is located</Description>
        <Observable>No</Observable>
        <DataType>
            <Basic>String</Basic>
        </DataType>
    </Property>
    <Property>
      <Identifier>EmergencyContact</Identifier>
      <DisplayName>Emergency Contact</DisplayName>
      <Description>
          A contact number or email address of a person to call in case of an accident of the device (not of a person)
      </Description>
      <Observable>No</Observable>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Property>
    <Property>
        <Identifier>FirmwareVersion</Identifier>
        <DisplayName>Firmware Version</DisplayName>
        <Description>Firmware Version of the Device</Description>
        <Observable>No</Observable>
        <DataType>
            <Basic>String</Basic>
        </DataType>
    </Property>
    </Feature>
